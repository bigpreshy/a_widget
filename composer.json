{
    "name": "acme-widget-co/basket",
    "description": "Acme Widget Co Basket System",
    "type": "project",
    "require": {
        "php": "^8.2" 
    },
    "autoload": {
        "psr-4": {
            "AcmeWidgetCo\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "AcmeWidgetCo\\Tests\\": "tests/"
        }
